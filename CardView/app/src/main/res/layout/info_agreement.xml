<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.kopilim.information_contract">

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/agreementImage"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/information_agreement_happycompany"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textInAgreement"
            android:layout_margin="10dp"
            android:text="@string/textInAgreement"
            android:textSize="17dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"/>

    </LinearLayout>

    </ScrollView>

</FrameLayout>